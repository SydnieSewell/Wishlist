<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemsRv"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
            android:id="@+id/itemUrLIV"
            android:layout_width="230dp"
            android:layout_height="64dp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:hint="Ex. https.//example/my-item-url"
            android:lines="5"
            android:maxLines="1"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        ></EditText>

    <EditText
    android:id="@+id/itemNameIV"
    android:layout_width="240dp"
    android:layout_height="54dp"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="15dp"
    android:hint="Item Name"
    android:lines="5"
    android:maxLines="1"
    app:layout_constraintBottom_toTopOf="@+id/itemUrLIV"

    app:layout_constraintStart_toStartOf="parent">
    >
</EditText>

    <Button
        android:id="@+id/submitButtonBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/itemPriceIV"
        android:layout_width="116dp"
        android:layout_height="52dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:hint="Ex. 5.99"
        android:lines="5"
        android:maxLines="1"
        app:layout_constraintBottom_toTopOf="@+id/submitButtonBt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itemNameIV">
        >
    </EditText>
</androidx.constraintlayout.widget.ConstraintLayout>